<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.activity.HomePageActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_firstPage"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="10dp"
            android:src="@drawable/dian" />

        <ImageView
            android:id="@+id/iv_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="10dp"
            android:src="@drawable/dian" />

        <ImageView
            android:id="@+id/iv_top3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="10dp"
            android:src="@drawable/dian" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_firstPage"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:id="@+id/layout_list1">

        <Button
            android:id="@+id/btn_list1"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/baojie"
            android:text="保洁服务"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_list2"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/jiadian"
            android:text="家电清洗"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_list3"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/jiaju"
            android:text="家居保养"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_list4"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/weixiu"
            android:text="维修服务"
            android:textSize="13sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_list2"
        android:layout_below="@+id/layout_list1"
        android:paddingTop="15dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/btn_list21"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/baomu"
            android:text="保姆"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_list22"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/banjia"
            android:text="搬家服务"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_list23"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/jujia"
            android:text="居家换新"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_list24"
            style="@style/main_tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/chuman"
            android:text="维修服务"
            android:textSize="13sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_list2"
        android:layout_marginTop="15dp"
        android:id="@+id/layout_list3"
        android:paddingTop="10dp"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:id="@+id/rLayout_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_guanggao1"
                android:text="日常服务"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="@color/zhuti"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_guanggao1_2"
                android:layout_below="@+id/tv_guanggao1"
                android:layout_centerHorizontal="true"
                android:text="专业工具，擦洗扫拖"
                android:paddingTop="3dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_guanggao1Image"
                android:layout_below="@id/tv_guanggao1_2"
                android:src="@mipmap/guanggaotupian1"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_margin="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rLayout_2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_guanggao2"
                    android:paddingTop="10dp"
                    android:text="擦玻璃"
                    android:textColor="#57ABE4"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_guanggao2_2"
                    android:layout_below="@id/tv_guanggao2"
                    android:text="洁净明亮如初"
                    android:paddingTop="3dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/iv_guanggao2Image"
                    android:src="@mipmap/guanggao2"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:layout_toEndOf="@id/tv_guanggao2_2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rLayout_3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_guanggao3"
                    android:paddingTop="10dp"
                    android:text="深度保洁"
                    android:textColor="#F96866"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_guanggao3_2"
                    android:layout_below="@id/tv_guanggao3"
                    android:text="家里焕然一新"
                    android:paddingTop="3dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/iv_guanggao3Image"
                    android:src="@mipmap/guanggao3"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:layout_toEndOf="@id/tv_guanggao3_2"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
